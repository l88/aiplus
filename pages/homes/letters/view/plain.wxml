<view class="page">
  <view class="page__bd">
    <view class="weui-article">
      <view class="weui-article__h1">{{deliver.letter.title}}</view>
      <view class="article-info">
        原创：{{deliver.letter.owner.nickName}}, 发布： {{deliver.sender.nickName}}, {{dtime}}
      </view>
      <view class="weui-article__section">
        <view class="weui-article__p">
          {{deliver.letter.content}}
        </view>
      </view>
    </view>

    <view class="weui-panel">
      <view class="weui-panel__bd">
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell">
            <view class="weui-cell__bd">
              已阅:123
            </view>
            <view class="weui-cell__ft">
              <button class="weui-btn mini-btn" size="mini">投诉</button>
            </view>
          </view>
          <view class="weui-cell">
            <view class="weui-cell__bd">
              <button class="weui-btn mini-btn" type="primary" size="mini">赞成(20/30/2232)</button>
              <button class="weui-btn mini-btn" type="default" size="mini">弃权(3/4/134)</button>
              <button class="weui-btn mini-btn" type="warn" size="mini">反对(10/11/1107)</button>
            </view>
            <view class="weui-cell__ft">
              <button class="weui-btn mini-btn" size="mini" bindtap="voteDetail">详情</button>
            </view>
          </view>
        </view>
        
      </view>
    </view>


    <view class="weui-cells__title">评论</view>

  </view>
</view>